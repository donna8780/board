<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="com.study_2.board_2.global.mapper.BoardMapper">

    <insert id="createBoard">
        <!-- id : 서비스에서 호출할 때 사용할 메서드 이름과 일치해야 함. (boardMapper.createBoard(req.of());)!-->
        <!--xml파일은 sql과 연결되기 때문에 sql 파일에 있는 변수 명과 일치시켜야 함!-->
        insert into board(title, content, author, created_date, updated_date)
        values(#{title}, #{content}, #{author}, #{createdDate}, #{updatedDate})

    </insert>

    <select id="getBoard" resultType="com.study_2.board_2.domain.entity.Board">
        <!--result Type: 쿼리 결과를 매핑할 엔티티 클래스 (Board)를 명시. 쿼리 결과를 이 클래스의 객체로 변환해 반환 !-->
        select * from board where id = #{id}
    </select>

    <select id="getBoardList" resultType="com.study_2.board_2.domain.entity.Board">
        select * from board
    </select>

    <delete id="deleteBoard">
        delete from board where id = #{id}

    </delete>

    <update id="updateBoard">
        update board set title = #{title}, content = #{content}, updated_date = #{updatedDate}
        where id = #{id}
    </update>

</mapper>